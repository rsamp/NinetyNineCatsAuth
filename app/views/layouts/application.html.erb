<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div style="float: left"><%= link_to("HOME", root_url, method: :get) %> </img></div>
<% if current_user %>
    <div style="float: right"><%= current_user.user_name %></div>
    <div style="float: right"><%= button_to("Log Out", session_url, method: :delete) %></div>
<% else %>
  <div style="float: right"><%= button_to("Log In", new_session_url, method: :get) %></div>
  <div style="float: right"><%= button_to("Sign Up", new_user_url, method: :get) %></div>
<% end %>
<br>
<%= yield %>

</body>
</html>
